<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs', { pageName: 'Catalog' }) %>
  <body>
    <%- include('partials/nav.ejs') %>
    <main class="container">
      <div id="grid">
        <% for(let i = 0; i < catalog.length; i++){ %> <% const album =
        catalog[i] %>
        <div class="album whitebox">
            <a href="/catalog/<%= album._id%>"> 
              <img src="<%=album.image%>" class="img-thumbnail album-art" alt="<%=album.name %>">
            </a>
            
            <h4><%= album.artist %></h4>

            <p><%= album.album %></p> 
        </div>
        <% } %>
      </div>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
