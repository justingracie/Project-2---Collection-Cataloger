<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs', {pageName: 'Login'}) %>

<body>

    <%- include('../partials/nav.ejs') %>

    <div>
        <h1> Login </h1>
        <form action="/login" method="POST">
            <div>
                <label> Email </label>
                <div>
                    <input 
                    name="email"
                    type="email"
                    placeholder="exapmle@domain.com"
                    />
                </div>
            </div>
            <div>
                <label> Password </label>
                <div>
                    <input 
                    name="password"
                    type="password"
                    placeholder="*******"
                    />
                </div>
            </div>
            <div>
                <div>
                    <button> Submit </button>
                </div>
            </div>
        </form>
    </div>
    
</body>
</html>